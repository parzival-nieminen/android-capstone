<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="primaryButton">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/title_text_size_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="primaryTitle">
        <item name="android:paddingBottom">@dimen/padding_16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/title_text_size_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VoteHeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size_20sp</item>
        <item name="android:layout_marginTop">@dimen/padding_16dp</item>
    </style>

    <style name="LinkStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorLink</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
    </style>

    <style name="RepresentativeHeader" parent="VoteHeaderStyle">
        <item name="android:textSize">20sp</item>
    </style>


</resources>
